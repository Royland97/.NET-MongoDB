@using UserInterface.Web.ViewModels.Yelp
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<UserModel>
<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "User List";
}
<h1>Users</h1>
<p>+ de 2000 ReviewCount</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>ReviewCount</th>
            <th>YelpingSince</th>
            <th>Useful</th>
            <th>Funny</th>
            <th>Cool</th>
            <th>Fans</th>
            <th>AverageStars</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ReviewCount)</td>
                <td>@Html.DisplayFor(modelItem => item.YelpingSince)</td>
                <td>@Html.DisplayFor(modelItem => item.Useful)</td>
                <td>@Html.DisplayFor(modelItem => item.Funny)</td>
                <td>@Html.DisplayFor(modelItem => item.Cool)</td>
                <td>@Html.DisplayFor(modelItem => item.Fans)</td>
                <td>@Html.DisplayFor(modelItem => item.AverageStars)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.UserId">Details</a>
                    <a asp-action="Reviews" asp-route-id="@item.UserId">Business</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
