@using UserInterface.Web.ViewModels.Yelp
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<UserModel>

@{
    ViewBag.Title = "User List";
}
<h1>Users</h1>
<p>+ 2000 ReviewCount</p>

<form asp-controller="User" asp-action="Index" method="GET">
    <p>
        <label>Name: <input type="text" name="search" /></label>
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>ReviewCount</th>
            <th>YelpingSince</th>
            <th>Useful</th>
            <th>Funny</th>
            <th>Cool</th>
            <th>Fans</th>
            <th>AverageStars</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ReviewCount)</td>
                <td>@Html.DisplayFor(modelItem => item.YelpingSince)</td>
                <td>@Html.DisplayFor(modelItem => item.Useful)</td>
                <td>@Html.DisplayFor(modelItem => item.Funny)</td>
                <td>@Html.DisplayFor(modelItem => item.Cool)</td>
                <td>@Html.DisplayFor(modelItem => item.Fans)</td>
                <td>@Html.DisplayFor(modelItem => item.AverageStars)</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-primary">Actions</button>
                        <div class="dropdown-content">
                            <a href="@Url.Action("Details", new { id = item.UserId })">Details</a>
                            <a href="@Url.Action("ReviewBusiness", new { id = item.UserId })">Reviews</a>
                            <a href="@Url.Action("TipsBusiness", new { id = item.UserId })">Tips</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
