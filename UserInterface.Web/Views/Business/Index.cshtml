@using UserInterface.Web.ViewModels.Yelp
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<BusinessModel>
<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Business List";
}
<h1>Business</h1>
<p>+ de 4 Stars</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Stars</th>
            <th>Review Count</th>
            <th>IsOpen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.State)</td>
                <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                <td>@Html.DisplayFor(modelItem => item.Latitude)</td>
                <td>@Html.DisplayFor(modelItem => item.Longitude)</td>
                <td>@Html.DisplayFor(modelItem => item.Stars)</td>
                <td>@Html.DisplayFor(modelItem => item.ReviewCount)</td>
                <td>@Html.DisplayFor(modelItem => item.IsOpen)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BusinessId">Details</a>
                    <a asp-action="Reviews" asp-route-id="@item.BusinessId">Reviews</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
